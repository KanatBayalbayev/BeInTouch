<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolBar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#5d6ade"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/trash"

            android:src="@android:drawable/ic_menu_delete"
            app:layout_constraintStart_toEndOf="@+id/userNameAccount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/userNameAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="serif"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Имя пользователя" />

        <ImageView
            android:id="@+id/optionsMenu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/buttontofindusers"
            android:src="@drawable/options"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white"
            tools:visibility="visible" />









    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:theme="@style/AppTheme"
        app:titleTextAppearance="@style/ToolbarTitle"
        android:background="#3949AB"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewChats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:listitem="@layout/chat_item" />

    <LinearLayout
        android:id="@+id/options"
        android:visibility="gone"
        tools:visibility="gone"
        android:orientation="vertical"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="-10dp"
        app:layout_constraintTop_toBottomOf="@+id/toolBar"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_background_options_menu"
        android:layout_width="150dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/buttonToLogOut"
            android:paddingEnd="18dp"
            android:paddingStart="4dp"
            android:paddingTop="12dp"
            android:gravity="start|center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:layout_width="50dp"
                android:layout_height="30dp"
                android:contentDescription="@string/buttontologout"
                android:src="@drawable/logout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/black" />

            <TextView
                android:text="Log out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/findUser"
            android:paddingTop="6dp"
            android:gravity="start|center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:contentDescription="@string/buttontofindusers"
                android:src="@android:drawable/ic_input_add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/optionsMenu"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/black" />

            <TextView
                android:text="Add friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>



    </LinearLayout>


    <View
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="false"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/dialog_delete_chat"
        android:visibility="gone"
        tools:visibility="gone"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="14dp"
        android:paddingTop="20dp"
        android:paddingEnd="14dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checking_deleting_chat"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/buttonToCancelToDeleteChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/buttonToDeleteChat"
                android:layout_marginStart="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_the_chat"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_search_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/rounded_background_alert_dialog"
        android:orientation="vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingBottom="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/buttonToCloseDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="#2b599c" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/mainIcon"
            app:lottie_rawRes="@raw/adduser3"
            app:lottie_autoPlay="true"
            android:visibility="visible"
            tools:visibility="visible"
            android:layout_marginTop="-22dp"
            android:layout_gravity="center"
            app:lottie_loop="false"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <TextView
            android:fontFamily="serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            android:text="@string/rule"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:id="@+id/inputSearchUser"
                android:layout_width="0dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="name"
                android:background="@drawable/rounded_background_edit_text"
                android:hint="@string/type_user_email"
                android:inputType="textEmailAddress"
                android:padding="8dp" />
            <!--            <TextView-->
            <!--                android:text="Search"-->
            <!--                android:gravity="center"-->
            <!--                android:layout_marginStart="8dp"-->
            <!--                android:textSize="18sp"-->
            <!--                android:paddingTop="7dp"-->
            <!--                android:paddingBottom="7dp"-->
            <!--                android:paddingStart="10dp"-->
            <!--                android:paddingEnd="10dp"-->
            <!--                android:textColor="@color/white"-->
            <!--                android:background="@drawable/rounded_background"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"/>-->
            <ImageView
                android:id="@+id/searchUser"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                android:contentDescription="@string/buttontofindusers"
                android:src="@android:drawable/ic_search_category_default"
                app:tint="#2b599c" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/underline" />

        <LinearLayout
            android:id="@+id/notFound"
            android:visibility="gone"
            tools:visibility="gone"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/iconNotFound"
                app:lottie_rawRes="@raw/notfound"
                app:lottie_autoPlay="true"
                android:visibility="visible"
                tools:visibility="visible"
                android:layout_gravity="center"
                app:lottie_loop="true"
                android:layout_width="200dp"
                android:layout_height="200dp"/>

            <TextView
                android:fontFamily="serif"
                android:gravity="center"
                android:text="@string/warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/foundUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:foregroundGravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/foundUserIconCIV"
                android:src="@drawable/usericon"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
            <ImageView
                android:id="@+id/foundUserIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/logoicon"
                android:src="@drawable/usericon"
                android:visibility="gone"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/foundUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:textSize="20sp"
                tools:text="Имя" />

            <ImageView
                android:id="@+id/buttonToAddUserToChats"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_round"
                android:src="@android:drawable/ic_input_add"
                android:visibility="gone"
                tools:visibility="visible"
                app:tint="@color/white" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialogRemoveFriend"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="gone"
        android:background="@drawable/rounded_background_alert_dialog"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/deleteUserLogo"
            android:visibility="visible"
            tools:visibility="visible"
            app:lottie_autoPlay="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/deletelogo"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <TextView
            android:textSize="20sp"
            android:fontFamily="serif"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:letterSpacing="0.04"
            android:textStyle="bold"
            android:text="@string/delete_this_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/buttonToDeleteFriend"
                android:textSize="17sp"
                android:text="Delete"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/buttonToCancelDeletingFriend"
                android:textSize="17sp"
                android:layout_marginStart="40dp"
                android:paddingTop="8dp"
                android:textColor="@color/white"
                android:paddingBottom="8dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:background="@drawable/rounded_background"
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>